<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="mainAnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="StartWindowController">
   <children>
      <Label layoutX="14.0" layoutY="21.0" prefHeight="31.0" prefWidth="200.0" text="Найденные текстовые файлы:" />
      <Button fx:id="openFileChooser" layoutX="470.0" layoutY="24.0" mnemonicParsing="false" onAction="#openFileChooserDialog" prefHeight="25.0" prefWidth="116.0" text="Выбрать файл" />
      <Label layoutX="311.0" layoutY="67.0" prefHeight="31.0" prefWidth="80.0" text="Выбран файл:" />
      <Label fx:id="choosenFileName" alignment="TOP_LEFT" layoutX="315.0" layoutY="108.0" prefHeight="76.0" prefWidth="271.0" text="no chosen file yet" />
      <Button fx:id="openFile" layoutX="311.0" layoutY="214.0" mnemonicParsing="false" onAction="#openFile" prefHeight="25.0" prefWidth="151.0" text="Открыть в приложении" />
      <Button fx:id="uploadChoosenFile" layoutX="387.0" layoutY="336.0" mnemonicParsing="false" onAction="#uploadFile" prefHeight="25.0" prefWidth="200.0" text="Загрузить файл на Google Drive" />
      <Label fx:id="infoLabel" layoutX="315.0" layoutY="361.0" prefHeight="25.0" prefWidth="271.0" text="Загрузка завершена." textFill="#147220" />
      <ListView fx:id="listView" layoutX="14.0" layoutY="87.0" prefHeight="299.0" prefWidth="271.0" />
      <Button fx:id="backToFolder" layoutX="14.0" layoutY="55.0" mnemonicParsing="false" onAction="#backToFolder" text="Назад" />
      <Button fx:id="createFolder" layoutX="187.0" layoutY="55.0" mnemonicParsing="false" onAction="#createFolder" prefHeight="25.0" prefWidth="98.0" text="Создать папку" />
   </children>
</AnchorPane>
